FROM python:3.10-slim

# Create app directory and copy code
WORKDIR /app
COPY nordpool/ /app/nordpool
COPY scripts/ /app/scripts

# Install Python dependencies
RUN pip install --no-cache-dir fastapi uvicorn pydantic requests

# Expose the API port
EXPOSE 8000

# Launch FastAPI app (module path reflects nordpool/backend/main.py)
CMD ["uvicorn", "nordpool.backend.main:app", "--host", "0.0.0.0", "--port", "8000"]